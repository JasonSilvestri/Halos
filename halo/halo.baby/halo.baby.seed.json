        "allOf": [
          {
            "if": {
              "properties": { "state": { "const": "CREATED" } },
              "required": [ "state" ]
            },
            "then": { "properties": { "stateCode": { "const": 1 } } }
          },
          {
            "if": {
              "properties": { "state": { "const": "QUEUED" } },
              "required": [ "state" ]
            },
            "then": { "properties": { "stateCode": { "const": 2 } } }
          },
          {
