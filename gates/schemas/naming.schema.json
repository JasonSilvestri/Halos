{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "naming.schema.json",
  "title": "Naming Rules",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "pattern": "^[A-Za-z0-9._-]+$"
    },
    "envTargets": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
